{% extends "views/base.twig" %}
{% block title %}Your dashboards - ChartZou{% endblock %}

{% block content %}
  <!-- Icons Grid -->
  <section class="text-center">
    <div class="container">
      <div class="row">
        <div class="col-lg-12 mt-5">
            <div class="text-right">
              <a class="btn btn-primary" href="/dashboard/new">Create new dashboard</a>
            </div>
            <div class="table-response mt-3">
              <table class="table table-hover">
                <tr>
                  <th>Name</th>
                  <th>Items</th> 
                  <th>Action</th>
                </tr>
                {% for dashboard in dashboards %}
                <tr>
                  <td>{{ dashboard.name }}</td>
                  <td>{{ dashboard.items|length }}
                  <td>
                    <a class='btn btn-info btn-sm btn-share-dashboard' data-dashboard-id='{{ dashboard.id }}'>Share</a>
                    <a href='/dashboard/view/{{ dashboard.id }}' class='btn btn-primary btn-sm'>View</a>
                    <a href='/dashboard/edit/{{ dashboard.id }}' class='btn btn-secondary btn-sm'>Edit</a>
                    <a class='btn btn-danger btn-sm btn-delete-dashboard' data-dashboard-id='{{ dashboard.id }}'>Delete</a>
                  </td>
                </tr>
                {% endfor %}
              </table>
            </div>
       </div>
    </div>
  </section>
  <!-- The Modal -->
  <div class="modal" tabindex="-1" role="dialog" id="share-modal">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Share dashboard</h5>
        <button type="button" class="close" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary" id="share-modal-submit">Share dashboard</button>
      </div>
    </div>
  </div>
</div>
<script type="text/javascript" src="dashboardlist.js"></script>
{% endblock %}